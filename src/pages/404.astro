---
import BaseLayout from "@/layouts/BaseLayout.astro";

// This 404 page is inspired by Franky47's one.
// https://github.com/franky47/francoisbest.com/blob/next/packages/francoisbest.com/src/app/not-found.tsx
---

<BaseLayout title="404">
  <section class="mt-32 space-y-4 text-center">
    <h2 class="text-secondary text-8xl font-bold">404</h2>
    <div>
      <h3 class="text-primary my-4 text-2xl font-semibold">Page non trouvée</h3>
      <p class="text-muted-foreground text-sm">Désolé, vous ne trouverez rien ici.</p>
    </div>
    <a href="/" class="hover:underline">Retour à l'accueil</a>
  </section>
</BaseLayout>
