---
import "../styles/global.css";

import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";

import info from "@/config/info.json";

interface Props {
  title: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={info.keywords} />
    <meta name="author" content={`${info.name}, ${info.mail}`} />
    <meta name="copyright" content={info.name} />
    <meta name="description" content={info.description} />
    <meta name="robots" content="noindex" />

    <title>{`${props.title} - ${info.name}`}</title>
  </head>
  <body class="selection:bg-primary/25 mx-auto size-full max-w-[630px] px-2.5 antialiased sm:px-0">
    <main class="my-8">
      <Header />
      <slot />
      <Footer />
    </main>
  </body>
</html>
