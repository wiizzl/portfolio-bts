---
import "../styles/global.css";

import Nav from "@/components/Nav.astro";

import info from "@/config/info.json";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

interface Props {
  title: string;
  class?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={info.keywords} />
    <meta name="author" content={`${info.name}, ${info.mail}`} />
    <meta name="copyright" content={info.name} />
    <meta name="description" content={info.description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={info.name} />
    <meta property="og:description" content={info.description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={`${Astro.url.origin}/opengraph-image.png`} />
    <meta property="og:site_name" content={info.name} />
    <meta name="twitter:card" content="summary_large_image" />

    <title>{`${props.title} | ${info.name}`}</title>
  </head>
  <body class="antialiased selection:bg-primary selection:text-accent-foreground h-full mx-auto w-full max-w-screen-2xl px-6 md:px-20 py-5 md:py-12">
    <Nav />
    <main class={props.class}>
      <slot />
    </main>
  </body>
</html>
