---
import { formatDate } from "@/lib/utils";

interface Props {
  title: string;
  startDate: Date;
  endDate?: Date;
  content: string[];
}

const { title, content, startDate, endDate } = Astro.props;
---

<div>
  <h3 class="font-medium">{title}</h3>
  <p class="capitalize text-xs">{formatDate(startDate)} - {endDate ? formatDate(endDate) : "Pr√©sent"}</p>
  <ul>
    {content.map((item) => <li>{item}</li>)}
  </ul>
</div>
